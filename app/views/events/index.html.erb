<% provide(:title, "All Events") %>
<div class="container">
	<div class="row">
		<div class="col-md-4">
			<% if @past_events.any?%>
				<h1>Past Events</h1>
				<ul class="event-list">
					<% @past_events.each do |event| %>
						<li class="list-group-item">
							<h1><%= link_to event.title, event %></h1>
							<h3>Date: <%= event.date %> </h3>
							<h3> Location: <%= event.location %></h3></h3>
							<h5>Host: <%= link_to event.creator.name, event.creator %></h5>
							<p><%= event.description %></p>
						</li>
					<% end %>
				</ul>
			<% end %>
		</div>
		<div class="col-md-8">
			<% if @upcoming_events.any?%>
				<h1>Future Events</h1>
				<ul class="event-list">
					<% @upcoming_events.each do |event| %>
						<li class="list-group-item">
							<h1><%= link_to event.title, event %></h1>
							<h3>Date: <%= event.date %> </h3>
							<h3> Location: <%= event.location %></h3></h3>
							<h5>Host: <%= link_to event.creator.name, event.creator %></h5>
							<p><%= event.description %></p>
						</li>
					<% end %>
				</ul>
			<% end %>
		</div>		
	</div>
</div>
