<% provide(:title, "All Events") %>
<div class="container">
	<div class="row">
		<div class="col-md-8 col-md-offset-2">
			<% if @events.any?%>
				<h1>Events</h1>
				<ul class="event-list">
					<% @events.each do |event| %>
						<li class="list-group-item">
							<h1><%= link_to event.title, event %></h1>
							<h3>Date: <%= event.date %> Location: <%= event.location %></h3>
							<h5>Host: <%= link_to event.creator.name, event.creator %></h5>
							<p><%= event.description %></p>
						</li>
					<% end %>
				</ul>
			<% end %>
		</div>	
	</div>
</div>

</div>
