
<div class="container">
<%= provide(:title, "Sign Up") %>
	<div class="col-md-6 col-md-offset-3">
	<%= form_for(@user) do |f| %>
		<%= f.label(:name, "Name:") %>
		<%= f.text_field(:name, class: "form-control") %>

		<%= f.label(:email, "Email:") %>
		<%= f.text_field(:email, class: "form-control") %>

		<%= f.submit "Create Account", class:"btn btn-primary" %>
	<% end %>
	</div>

</div>
  